<div class="wrapper d-flex py-4">
  <div class="top">
    <p class="top-title">Chat App</p>
    <p class="top-icon"><i class="far fa-comments"></i></p>
  </div>
  <div class="login_box mr-4">
    <div class="box-inner">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}",class: "alert alert-danger" if msg.is_a?(String) %>
      <% end %> 
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
      
        <h1>ログイン</h1>
        <div class="box-email">
          <%= f.label :email, "Eメール" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="box-password">
          <div class="a-row">
            <div class="column-left">
              <%= f.label :password, "パスワード" %>
            </div>
          </div>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <div class="box-login">
          <%= f.submit "ログイン" %>
  
          <% if devise_mapping.rememberable? %>
            <div class="remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember, "ログインしたままにする" %>
            </div>
          <% end %>
        </div>
      <% end %>
  
      <div class="box-newusr">
        <p><span>------------</span> 新しいお客様ですか？ <span>------------</span></p>
        <%= link_to "アカウントを作成", new_user_registration_path %>
      </div>
    </div>
  </div>
  
</div> 
