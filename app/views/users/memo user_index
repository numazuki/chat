
<table class="table offset-2 col-8">


<% @users.each do |user| %>

  
    <tr>
        <th class="text-center">name</th>
        <th class="text-center">id</th>
        <th class="text-center">email</th>
        <th></th>

    </tr>
    <tr>
        <td><%=user.name%></td>
        <td class="text-right"><%=user.id%></td>
        <td class="text-right"><%= link_to user.email, user_path(user.id) %></td>
        <% if user_signed_in? && user != current_user %>
          <td id="follow_form_<%=user.id%>">
            <% if current_user.following?(user) %>
              <%= render "unfollow", user: user %>
            <% else %>
              <%= render "follow", user: user %>
            <% end %>
          </td>
        <% end %>        
    </tr>
<% end %>
</table>

<% if t.user.thumbnail.blank? %>
 <%= image_tag "thumbnail_default.jpg" %>
<% else %>
 <%= image_tag  t.user.thumbnail.url(:thumb) %>
<% end %>

      <ul class="js-users">
        <%= render 'user', users: @users %><!-- 部分テンプレートを呼び出し-->
